{
  "devDependencies": {
    "concurrently": "^6.4.0",
    "javascript-obfuscator": "^4.0.2",
    "nodemon": "^3.0.1",
    "sass": "^1.45.0",
    "terser": "^5.10.0"
  },
  "scripts": {
    "sass": "sass --watch scss/main.scss:assets/css/style.css",
    "minify-obfuscate": "terser js/App.js -o assets/js/App.min.js && javascript-obfuscator assets/js/App.min.js --output assets/js/App.js && rm assets/js/App.min.js",
    "watch:scss": "nodemon -e scss -x \"npm run sass\"",
    "watch:js": "nodemon -e js -x \"npm run minify-obfuscate\"",
    "start": "concurrently \"npm:watch:scss\" \"npm:watch:js\""
  }
}
